<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#353232"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        style="@style/MyLinearLayout"
        android:layout_height="10dp"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/_3gach"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:src="@drawable/ic_baseline_dehaze_24" />

        <TextView
            android:id="@+id/Text1"
            android:layout_toRightOf="@+id/_3gach"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="Standard"
            android:textColor="@color/white"
            android:textSize="25sp"

            />

        <ImageView
            android:layout_toRightOf="@id/Text1"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_baseline_launch_24" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_baseline_history_24" />


    </RelativeLayout>

    <RelativeLayout
        style="@style/MyLinearLayout"
        android:layout_weight="1.5">

        <TextView
            android:id="@+id/inputS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:hint="input"
            android:textColorHint="@color/white"
            android:textSize="25sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/inputS"
            android:gravity="right|center_vertical"
            android:paddingRight="20dp"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        style="@style/MyLinearLayout"
        android:layout_weight="6"
        android:orientation="vertical"
        android:weightSum="6.5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="horizontal">

            <TextView
                style="@style/MyTextView1"
                android:text="MC" />

            <TextView
                style="@style/MyTextView1"
                android:text="MR" />

            <TextView
                style="@style/MyTextView1"
                android:text="M+" />

            <TextView
                style="@style/MyTextView1"
                android:text="M-" />

            <TextView
                style="@style/MyTextView1"

                android:text="MS" />

            <TextView
                style="@style/MyTextView1"

                android:text="M" />
        </LinearLayout>

        <LinearLayout
            style="@style/MyLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                style="@style/MyTextView2"
                android:background="@color/den_"
                android:text="%" />

            <TextView
                style="@style/MyTextView2"
                android:background="@color/den_"
                android:text="CE" />
            <TextView
                style="@style/MyTextView2"
                android:background="@color/den_"
                android:text="C" />
            <TextView
                style="@style/MyTextView2"
                android:background="@color/den_"
                android:text="x" />
        </LinearLayout>
        <LinearLayout
            style="@style/MyLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                style="@style/MyTextView2"
                android:background="@color/den_"
                android:text="1/x" />
            <TextView
                style="@style/MyTextView2"
                android:background="@color/den_"
                android:text="x^2" />
            <TextView
                style="@style/MyTextView2"
                android:background="@color/den_"
                android:text="âˆš2" />
            <TextView
                style="@style/MyTextView2"
                android:background="@color/den_"
                android:text="/" />
        </LinearLayout>
        <LinearLayout
            style="@style/MyLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                style="@style/MyTextView2"
                android:background="@color/black"
                android:text="7" />
            <TextView
                style="@style/MyTextView2"
                android:background="@color/black"
                android:text="8" />
            <TextView
                style="@style/MyTextView2"
                android:background="@color/black"
                android:text="9" />
            <TextView
                style="@style/MyTextView2"
                android:background="@color/den_"
                android:text="x" />
        </LinearLayout>
        <LinearLayout
            style="@style/MyLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                style="@style/MyTextView2"
                android:background="@color/black"
                android:text="4" />
            <TextView
                style="@style/MyTextView2"
                android:background="@color/black"
                android:text="5" />
            <TextView
                style="@style/MyTextView2"
                android:background="@color/black"
                android:text="6" />
            <TextView
                style="@style/MyTextView2"
                android:background="@color/den_"
                android:text="-" />
        </LinearLayout>
        <LinearLayout
            style="@style/MyLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                style="@style/MyTextView2"
                android:background="@color/black"
                android:text="1" />
            <TextView
                style="@style/MyTextView2"
                android:background="@color/black"
                android:text="2" />
            <TextView
                style="@style/MyTextView2"
                android:background="@color/black"
                android:text="3" />
            <TextView
                style="@style/MyTextView2"
                android:background="@color/den_"
                android:text="+" />
        </LinearLayout>
        <LinearLayout
            style="@style/MyLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                style="@style/MyTextView2"
                android:background="@color/black"
                android:text="+/-" />
            <TextView
                style="@style/MyTextView2"
                android:background="@color/black"
                android:text="0" />
            <TextView
                style="@style/MyTextView2"
                android:background="@color/black"
                android:text="." />
            <TextView
                style="@style/MyTextView2"
                android:background="#3D35FF"
                android:text="=" />
        </LinearLayout>



    </LinearLayout>

</LinearLayout>